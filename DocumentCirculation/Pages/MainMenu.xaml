<Page x:Class="DocumentCirculation.Pages.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DocumentCirculation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu"
      xmlns:Helpers="clr-namespace:DocumentCirculation.Helpers"
      DataContext="{Binding Source={x:Static Helpers:ViewModel.Instanse}}">

    <Grid>
        <StackPanel>
            <Button Content="Add documents" Command="{Binding MainMenuViewModel.NavigateDocumentAddPage}"/>
            <Button Content="Documents list" Click="Button_Click_1" Margin="0 15 0 0"/>
            <Button Content="Settings list" Click="Button_Click_2" Margin="0 15 0 0"/>
        </StackPanel>
        
    </Grid>
</Page>
